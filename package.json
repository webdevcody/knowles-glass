{
  "name": "knowles-glass",
  "module": "index.ts",
  "type": "module",
  "dependencies": {
    "@hono/node-server": "^1.12.0",
    "clsx": "^2.1.1",
    "hono": "^4.5.0",
    "npm-run-all": "^4.1.5",
    "tailwind-merge": "^2.4.0",
    "tsx": "^4.16.2",
    "zod": "^3.23.8",
    "tailwindcss": "^3.4.6"
  },
  "devDependencies": {
    "eslint": "^9.7.0",
    "livereload": "^0.9.3",
    "prettier-plugin-tailwindcss": "^0.6.5"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "scripts": {
    "dev": "run-p server tailwind livereload",
    "server": "tsx --watch src/server.tsx",
    "start": "tsx src/server.tsx",
    "livereload": "livereload -d -e 'tsx,ts,css' ./src",
    "tailwind": "tailwindcss -i src/styles/index.css -o static/styles.css --watch",
    "build:tailwind": "tailwindcss -i src/styles/index.css -o static/styles.css"
  }
}
